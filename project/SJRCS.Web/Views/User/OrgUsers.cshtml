@{
    Layout = "~/Views/Shared/_ContentLayout.cshtml";
}
@section Script{
    <script src="/Scripts/User/OrgUsers.js"></script>
}
<div class="operate">
   <a href="#" class="button button-flat-primary button-small" style="color:red">未设置</a>
    丨
   <a href="/User/ReportUsers?tableId=@Request["tableId"]&orgCode=@Request["orgCode"]" class="button button-flat-primary button-small">已设置</a>
    丨
   <a href="/Contact/AllContacts?tableId=@Request["tableId"]" class="button button-flat-primary button-small">常用联系人</a>
</div>
<table class="table table-condensed table-bordered table-striped">
    <thead>
        <tr>
            <th>姓名
            </th>
            <th width="80">操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (dynamic item in Model)
        {
            <tr >
                <td>
                    <span title="@item.DISPLAY_NAME" form-val="textwarp">@item.DISPLAY_NAME</span>
                </td>
                <td userid="@item.USER_ID">
                    @if (item.ISSET)
                    {
                        <button class="btn btn-mini disabled" disabled="disabled"><i class="icon-ok"></i> 添加</button>
                    }
                    else
                    {
                        <button id="@item.USER_ID" data-loading-text="正在添加..." class="btn btn-mini" operate="set"><i class="icon-ok"></i> 添加</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
